@model VeioACalhar.Models.Fornecedor

@{
    ViewData["Title"] = "Deletar Fornecedor";
}

<div class="container">

    <div class="alert alert-warning" role="alert">
        <h1>Deletar</h1>

        <p>Tem certeza que deseja deletar esse fornecedor?</p>

        <div>
            <h4>@Model.Nome</h4>

            <hr />

            <dl class="row">
                <dt class="col-sm-2">
                    Código
                </dt>
                <dd class="col-sm-10">
                    @Model.Id
                </dd>

                <dt class="col-sm-2">
                    Nome
                </dt>
                <dd class="col-sm-10">
                    @Model.Nome
                </dd>

                <dt class="col-sm-2">
                    Nome Fantasia
                </dt>
                <dd class="col-sm-10">
                    @Model.NomeFantasia
                </dd>

                <dt class="col-sm-2">
                    CNPJ
                </dt>
                <dd class="col-sm-10">
                    @Model.Cnpj
                </dd>

                <dt class="col-sm-2">
                    Observações
                </dt>
                <dd class="col-sm-10">
                    @Model.Observacoes
                </dd>
            </dl>
        </div>

        <p>
            Essa ação é permanente e não pode ser desfeita.
        </p>
    </div>
    
    <form asp-action="Delete">
        @Html.ActionLink("Voltar", "Index", new{ }, new { @class = "btn btn-outline-secondary", @style="width: 100px" })

        <input type="submit" value="Deletar" class="btn btn-danger" style="width: 100px" />
    </form>
</div>